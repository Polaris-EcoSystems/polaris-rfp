# Frontend Environment Variables
NEXT_PUBLIC_API_BASE_URL=https://api.rfp.polariseco.com
NEXT_PUBLIC_ALLOWED_EMAIL_DOMAIN=polariseco.com
NODE_ENV=development

# Backend (FastAPI) Environment Variables
PORT=8080
NODE_ENV=development
FRONTEND_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
ALLOWED_EMAIL_DOMAIN=polariseco.com

# DynamoDB
# For AWS: set DDB_TABLE_NAME to the deployed table name (e.g. polaris-rfp-production)
DDB_TABLE_NAME=polaris-rfp-local
AWS_REGION=us-east-1
# For DynamoDB Local (optional)
DDB_ENDPOINT=http://localhost:8000

# JWT Secret (generate a secure secret for production)
JWT_SECRET=your-super-secret-jwt-key-here

# OpenAI API Key (if using AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Cognito (required for auth in production)
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# Magic link (required for passwordless login)
MAGIC_LINK_TABLE_NAME=polaris-rfp-magic-production

# S3 assets bucket (headshots, etc.)
ASSETS_BUCKET_NAME=your-assets-bucket-name

# Canva Connect (optional; enables /integrations/canva)
CANVA_CLIENT_ID=your-canva-client-id
CANVA_CLIENT_SECRET=your-canva-client-secret
CANVA_REDIRECT_URI=https://api.rfp.polariseco.com/api/integrations/canva/callback
CANVA_TOKEN_ENC_KEY=your-canva-token-encryption-key

# Slack (optional; enables /api/integrations/slack/*)
SLACK_ENABLED=false
# Prefer providing a single secret ARN and storing Slack keys as JSON in Secrets Manager:
# - SLACK_ACCESS_TOKEN (or SLACK_BOT_TOKEN)
# - SLACK_REFRESH_TOKEN (optional, if using token rotation)
# - SLACK_ACCESS_TOKEN_EXPIRES_AT (optional unix seconds)
# - SLACK_SIGNING_SECRET
# - SLACK_DEFAULT_CHANNEL
# - SLACK_RFP_MACHINE_CHANNEL (recommended: channel ID; required for private channels)
# - SLACK_CLIENT_ID / SLACK_CLIENT_SECRET (required for refresh_token rotation)
SLACK_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:polaris-rfp/slack-xxxxxx

# Legacy direct env vars (works, but doesn't auto-pick-up rotations without redeploy)
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_DEFAULT_CHANNEL=#rfp-alerts
SLACK_RFP_MACHINE_CHANNEL=G0123456789
